<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mazesolver.androidapp.ButtonsActivity">


    <Button
        android:id="@+id/servo1Clock"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="84dp"
        android:layout_height="56dp"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:background="#FF79B87C"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:shadowColor="#AA0F42"
        android:text="Up"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/servo1AntiClock"
        style="@android:style/Widget.Button"
        android:layout_width="84dp"
        android:layout_height="56dp"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="125dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="288dp"
        android:background="#FF79B87C"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:shadowColor="#AA0F42"
        android:text="Down"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/servo2Clock"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="84dp"
        android:layout_height="56dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="#79B87C"
        android:shadowColor="#AA0F42"
        android:text="Right"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/servo2AntiClock"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="84dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="260dp"
        android:background="#FF79B87C"
        android:shadowColor="#AA0F42"
        android:text="Left"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>